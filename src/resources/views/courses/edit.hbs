<div class="mt-4">
    <h3>Sửa khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>

        <div class="form-group">
            <label for="level">Mức độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
        </div>

        <div class="form-group">
            <label for="totalLesson">Số buổi học</label>
            <input type="text" class="form-control" value="{{course.totalLesson}}" id="totalLesson" name="totalLesson">
        </div>

        <div class="form-group">
            <label for="totalTime">Thời gian học</label>
            <input type="text" class="form-control" value="{{course.totalTime}}" id="totalTime" name="totalTime">
        </div>


        <button type="submit" class="btn btn-primary">Lưu khóa học</button>
    </form>
</div>